<script>
  // Initialize popup functionality
  document.addEventListener('DOMContentLoaded', () => {
    const featureCards = document.querySelectorAll('.feature-image-container');
    const popupOverlay = document.querySelector('.popup-overlay');
    const popups = document.querySelectorAll('.image-popup');
    let hoverTimers = {};
    let activePopupId = null;
    
    // Remove the original popups from the cards
    featureCards.forEach(card => {
      const popup = card.querySelector('.image-popup');
      if (popup) {
        popup.remove();
      }
    });
    
    featureCards.forEach((card, index) => {
      // Track hover with delay
      card.addEventListener('mouseenter', () => {
        hoverTimers[index] = setTimeout(() => {
          showPopup(index);
        }, 1000); // 1 second delay
      });
      
      card.addEventListener('mouseleave', () => {
        // Clear the timer if mouse leaves before timeout
        if (hoverTimers[index]) {
          clearTimeout(hoverTimers[index]);
          delete hoverTimers[index];
        }
      });
      
      // Add click handler to open popup immediately
      card.addEventListener('click', () => {
        // Clear any pending timers
        if (hoverTimers[index]) {
          clearTimeout(hoverTimers[index]);
          delete hoverTimers[index];
        }
        
        showPopup(index);
      });
    });
    
    function showPopup(index) {
      // Hide any active popup
      if (activePopupId !== null) {
        const activePopup = document.getElementById(`popup-${activePopupId}`);
        if (activePopup) {
          activePopup.classList.remove('active');
        }
      }
      
      // Show the selected popup
      const popup = document.getElementById(`popup-${index}`);
      if (popup) {
        popup.classList.add('active');
        activePopupId = index;
        document.body.classList.add('popup-active');
        popupOverlay.classList.add('active');
      }
    }
    
    function hideAllPopups() {
      popups.forEach(popup => {
        popup.classList.remove('active');
      });
      activePopupId = null;
      document.body.classList.remove('popup-active');
      popupOverlay.classList.remove('active');
    }
    
    // Close popup when clicking overlay
    popupOverlay.addEventListener('click', hideAllPopups);
    
    // Add escape key to close popup
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        hideAllPopups();
      }
    });
    
    // Add click handler to close buttons
    document.querySelectorAll('.close-popup-btn').forEach(btn => {
      btn.addEventListener('click', hideAllPopups);
    });
  });
